@{
    ViewData["Title"] = "Confirmación de Solicitud";
    Layout = null;

    var curp = TempData["CURP"] as string;
    var turno = TempData["Turno"] as int?;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Estilos personalizados -->
    <style>
        body {
            background: linear-gradient(135deg, #7F56A8, #332382, #B03A82);
        }

        .ticket-card {
            background: linear-gradient(135deg, #313b83, #6d3f8a);
            color: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .ticket-number {
            background: white;
            color: #313b83;
            font-size: 3rem;
            font-weight: bold;
            border-radius: 10px;
            padding: 10px 20px;
            display: inline-block;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="row justify-content-center">

            <div class="col-md-7">
                <div class="card ticket-card text-center p-5">

                    <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #8fd19e;"></i>
                    <h2 class="fw-bold mt-3">¡Solicitud registrada con éxito!</h2>

                    <p class="mt-3 fs-5">
                        Guarda tu número de turno para dar seguimiento a tu trámite:
                    </p>

                    <div class="ticket-number">
                        TURNO: @turno
                    </div>

                    <p class="mt-4 fs-5"><strong>CURP:</strong> <span class="text-warning">@curp</span></p>

                    <div class="mt-4 row g-2">
                        <div class="col-12">
                            <a href="/Tickets/Registrar" class="btn btn-outline-light w-100">
                                <i class="bi bi-plus-circle me-1"></i>Registrar otra solicitud
                            </a>
                        </div>
                        <div class="col-12">
                            <a href="/Home/Index" class="btn btn-light text-dark w-100">
                                <i class="bi bi-house-door me-1"></i>Volver al inicio
                            </a>
                        </div>
                        <a href="/Tickets/Consultar" class="btn btn-outline-warning btn-lg px-4 ms-2">
                            <i class="bi bi-search me-2"></i>Consultar estatus de solicitud
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        Swal.fire({
            title: '¡Registro completado!',
            text: 'Tu número de turno es @turno',
            icon: 'success',
            confirmButtonColor: '#6d3f8a',
            confirmButtonText: 'Aceptar'
        });
    </script>

</body>
</html>
