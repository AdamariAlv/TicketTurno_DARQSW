@{
    ViewData["Title"] = "Confirmación de Solicitud";
    Layout = null;
    var curp = TempData["CURP"] as string;
    var turno = TempData["Turno"] as int?;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 bg-gradient"
                 style="background: linear-gradient(135deg, #313b83, #6d3f8a); color:white;">
                <div class="card-body text-center py-5">
                    <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #8fd19e;"></i>
                    <h2 class="fw-bold mt-3">¡Tu solicitud ha sido registrada con éxito!</h2>
                    <p class="mt-3 fs-5">Gracias por utilizar el sistema de turnos. A continuación encontrarás tu número de turno:</p>

                    <div class="mt-4 mb-5">
                        <div class="display-4 fw-bold bg-white text-dark d-inline-block px-4 py-3 rounded-3 shadow">
                            Turno: @turno
                        </div>
                    </div>

                    <p class="fs-5 mb-2"><strong>CURP registrada:</strong> <span class="text-warning">@curp</span></p>
                    <p class="fs-6 text-light opacity-75 mb-4">Con este número podrás consultar el estado de tu solicitud posteriormente.</p>

                    <a href="/Tickets/Registrar" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-plus-circle me-2"></i>Registrar otra solicitud
                    </a>
                    <a href="/Home/Index" class="btn btn-light btn-lg ms-2 px-4">
                        <i class="bi bi-house-door me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Muestra una mini animación al cargar
        Swal.fire({
            title: '¡Registro completado!',
            text: 'Tu número de turno es @turno',
            icon: 'success',
            confirmButtonColor: '#6d3f8a',
            confirmButtonText: 'Aceptar'
        });
    </script>
}
