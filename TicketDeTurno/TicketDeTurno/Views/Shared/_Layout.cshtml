@*
    Ticket de Turno - Layout Base (Bootstrap 5)
*@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticket de Turno</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Iconos Bootstrap y Google Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Sidebar */
        #sidebar {
            width: 240px;
            background-color: #212529;
            color: white;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

        #sidebar .nav-link {
            color: #adb5bd;
            transition: 0.2s;
        }

        #sidebar .nav-link:hover, #sidebar .nav-link.active {
            color: #fff;
            background-color: #343a40;
        }

        /* Navbar */
        #main-navbar {
            margin-left: 240px;
        }

        .navbar {
            box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        }

        main {
            margin-left: 240px;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="d-flex flex-column p-3">
            <h5 class="text-white mb-4">
                <i class="bi bi-ticket-perforated me-2 text-warning"></i>
                Ticket de Turno
            </h5>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link active">
                        <i class="bi bi-bar-chart-line me-2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a asp-controller="Catalogos" asp-action="Solicitudes" class="nav-link">
                        <i class="bi bi-journal-text me-2"></i> Solicitudes
                    </a>
                </li>
                <li>
                    <a asp-controller="Catalogos" asp-action="Municipios" class="nav-link">
                        <i class="bi bi-geo-alt me-2"></i> Municipios
                    </a>
                </li>
                <li>
                    <a asp-controller="Catalogos" asp-action="Niveles" class="nav-link">
                        <i class="bi bi-mortarboard me-2"></i> Niveles
                    </a>
                </li>
                <li>
                    <a asp-controller="Catalogos" asp-action="TiposTramite" class="nav-link">
                        <i class="bi bi-ui-checks-grid me-2"></i> Trámites
                    </a>
                </li>
            </ul>

            <hr />
            <div>
                <a asp-controller="Login" asp-action="Logout" class="nav-link text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                </a>
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="flex-grow-1">
            <!-- Navbar -->
            <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white px-4">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h5">
                        <i class="bi bi-speedometer2 text-primary me-2"></i>
                        Panel Administrativo
                    </span>
                    <div class="d-flex align-items-center ms-auto">

                        <span class="me-3 text-secondary">Admin</span>
                        <img src="https://cdn-icons-png.freepik.com/512/9218/9218712.png" alt="avatar"
                             width="35" class="rounded-circle border" />
                    </div>
                </div>
            </nav>

            <!-- Contenido dinámico -->
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts extra (opcional) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
